pipeline {
    agent { label 'devsecops-demo-private-jenkins-slave' }
    /*options {
        // Timeout counter starts AFTER agent is allocated
        timeout(time: 1, unit: 'SECONDS')
    }*/
    stages {
          stage("build & SonarQube analysis") {
            steps {
              sh 'whoami'
              sh 'ifconfig'
              withSonarQubeEnv('devsecops-demo-sonarqube-server') {
                sh 'mvn clean package sonar:sonar'
                //sh "${mvn}/bin/mvn clean verify sonar:sonar -Dsonar.projectKey=devsecops-demo-project -Dsonar.projectName='devsecops-demo-project'"
              }
            }
          }
          stage("Quality Gate") {
            steps {
              timeout(time: 3, unit: 'MINUTES') {
                waitForQualityGate abortPipeline: true
              }
            }
          }
          stage('Docker Build') {
            steps {
              sh 'whoami'
              sh 'ifconfig'
      	      sh 'docker build -t devsecops-demo-java-app:latest .'
            }
          }
    }
}